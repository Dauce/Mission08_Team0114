@model List<Mission08_Team0114.Models.Task>

@{
    ViewData["Title"] = "Quadrants";
}

<div class="text-center">
    <h1 class="display-4">Time Management Matrix</h1>
    <h5 class="display-6" style="font-size: 1.2rem;">Stephen Covey</h5>
    
</div>
<br/><br/>
<div class="container">
<div class="row">
    <div class="col">
        <h3 class="display-6" style="font-size: 2rem; font-weight: bold;">Quadrant 1: Important/Urgent</h3>
        @foreach (var task in Model.Where(t => t.quadrant == 1))
        {
            <div class="row">
                <div class="col-2 fw-bold" style="font-size: 1rem;">Task:</div>
                <div class="col-4">@task.taskName</div>
                <div class="col-2 fw-bold" style="font-size: 1rem;">Category:</div>
                <div class="col-4">@task.categoryName</div>
            </div>

            <div class="row">
                <div class="col-2 fw-bold" style="font-size: 1rem;">Due Date:</div>
                <div class="col-4">@task.dueDate</div>
                <div class="col-2 fw-bold" style="font-size: 1rem;">Completed:</div>
                <div class="col-4">@task.completed </div>
            </div>

            <div class="row">
                <div class="col">
                    <button class="btn btn-info" onclick="location.href='@Url.Action("Edit", "Home", new { id = task.taskId })'">Edit</button>
                    <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Home", new { id = task.taskId })'">Delete</button>
                </div>
            </div>
            <hr />
        }
    </div>

    <div class="col">
        <h3 class="display-6" style="font-size: 2rem; font-weight: bold;">Quadrant 2: Important/Not Urgent</h3>
